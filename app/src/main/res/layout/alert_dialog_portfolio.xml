<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/customAlertPortfolio_editTextCoinName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:hint="Coin name"/>

    <EditText
        android:id="@+id/customAlertPortfolio_editTextAmount"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:hint="Amount"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        >

        <EditText
            android:id="@+id/customAlertPortfolio_editTextPriceBought"
            android:inputType="numberDecimal"
            android:layout_width="0dp"
            android:layout_weight="1.66"
            android:layout_height="wrap_content"
            android:hint="Price Bought"/>

        <EditText
            android:id="@+id/customAlertPortfolio_editTextPair"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Pair"/>

    </LinearLayout>





</LinearLayout>